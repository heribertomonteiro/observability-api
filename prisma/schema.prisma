generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MetricOrigin {
  INTERNAL
  EXTERNAL
}

model Service {
  id       String      @id @default(uuid())
  name     String
  baseUrl String
  isActive Boolean     @default(true)

  logs    Log[]

  createdAt DateTime   @default(now())
}

model Metric {
  id         String   @id @default(uuid())
  serviceId  String

  route     String
  method    String
  responseTime Int

  origin    MetricOrigin @default(INTERNAL)

  createdAt DateTime @default(now())
}

model Log {
  id         String   @id @default(uuid())
  serviceId  String
  service    Service  @relation(fields: [serviceId], references: [id])

  level     String
  message   String
  context   Json?

  createdAt DateTime @default(now())
}
